{
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "suggest.confirmKeys": [
    "<CR>"
  ],
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "clangd.arguments": [
    "--compile-commands-dir=.",
    "--clang-tidy",
    "--header-insertion=iwyu",
    "--background-index"
  ],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/21.1.8/clangd_21.1.8/bin/clangd"
}
