{
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "suggest.confirmKeys": [
    "<CR>"
  ],
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "clangd.arguments": [
    // Estas flags são usadas quando compile_commands.json não é encontrado.
    "--compile-commands-dir=.",
    "-std=c++20",
    "-Wall",
    "-Wextra",
     "-I/usr/include/c++/11" 
  ],
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_commands.json", "compile_flags.txt", ".git/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  }
}
